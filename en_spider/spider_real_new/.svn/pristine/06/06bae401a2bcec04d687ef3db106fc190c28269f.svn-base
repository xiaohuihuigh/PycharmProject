import time
import logging
import re
import my_utils
from base_parse import BaseParse
from lxml import etree
from items import Item
from six.moves.urllib.parse import urljoin


class Dayoo1(BaseParse):
    """http://news.dayoo.com/guangzhou/150959.shtml"""

    def _parse(self, raw_html):
        root = etree.HTML(raw_html)
        # print raw_html
        lines = root.xpath("//div[@class='dy-list']/div")
        # print "lines", len(lines)
        for li in lines:
            # print "li"
            item = Item()
            url = "".join(li.xpath("./h2/a/@href"))
            # url = urljoin(self.url, url)
            # print url
            nid_match = re.match(r".*/\d+_(\d{5,36})\.htm", url)
            if nid_match:
                # print "match"
                nid = nid_match.group(1)
                # nid = my_utils.get_hash_nid(nid)
                # print nid
            else:
                continue
            title = "".join(li.xpath("./h2/a/text()"))
            # print title
            abstract = "".join(li.xpath("./div/div[1]/text()"))
            # time_text = "".join(li.xpath("./span/text()"))
            # print time_text
            status = 1
            item.set("nid", nid)
            item.set("title", title)
            item.set("url", url)
            item.set("status", status)
            # item.set("abstract", abstract)
            # item.set('timestamp', my_utils.get_timestamp(time_text))
            self._add_to_data(item)


